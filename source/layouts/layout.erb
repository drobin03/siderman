<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Siderman" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
              <%= image_tag 'logo.png' %>
            </a>
          </div>
          <div class="collapse navbar-collapse" id="main-nav">
            <ul class="nav navbar-nav navbar-right">
              <%= nav_item 'HOME', '/' %>
              <%= nav_item 'ABOUT US', '#about' %>
              <%= nav_item 'OUR SERVICES', '#services' %>
              <%= nav_item 'GALLERY', '/gallery' %>
              <li><a href="javascript:void();" class="nav-link" data-toggle="modal" data-target="#contact_modal">CONTACT US</a></li>
            </ul>
          </div>
        </div>
        <div class="email-message hidden alert alert-success alert-dismissible fade in" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button> Thanks for contacting us! We will get back to you as soon as possible!</div>
      </nav>
    </header>

    <div id="body">
      <% if current_page.data.featured_image %>
        <div id="featured_image">
          <%= image_tag current_page.data.featured_image %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <%= partial 'layouts/footer' %>
  </body>
</html>