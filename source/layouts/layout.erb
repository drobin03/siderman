<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon-precomposed" sizes="180x180" href="apple-touch-icon-180x180-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="apple-touch-icon-152x152-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="apple-touch-icon-144x144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="apple-touch-icon-114x114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="apple-touch-icon-72x72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" href="apple-touch-icon-precomposed.png" />
    <link rel="shortcut icon" href="favicon.png" />
    <link rel="icon" type="image/ico" href="favicon.ico" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= "#{current_page.data.title} - Siderman Siding" %></title>
    <%- if current_page.data.description.present? -%>
    <meta name="description" content="<%= current_page.data.description %>">
    <%- end -%>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body id="top" class="<%= page_classes %>" data-spy="scroll" data-target="#main-nav" data-offset="60">
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div id="navigation">
          <div class="container">
            <div class="row">
              <div class="navbar-header">
                <% link_to '/index.html', class: 'navbar-brand visible-xs' do %>
                  <%= image_tag 'logo.png' %>
                <% end %>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              </div>
              <% link_to '/index.html', class: 'navbar-brand hidden-xs' do %>
                <%= image_tag 'logo.png' %>
              <% end %>
              <div class="collapse navbar-collapse navbar-right" id="main-nav">
                <ul class="nav navbar-nav">
                  <% prefix = '/index.html' if current_page.path != 'index.html' %>
                  <%= nav_item 'HOME', "#{prefix}#top" %>
                  <%= nav_item 'ABOUT', "#{prefix}#who-we-are" %>
                  <%= nav_item 'SERVICES', "#{prefix}#services" %>
                  <%= nav_item 'GALLERY', '/gallery.html' %>
                  <%= nav_item 'JOIN US', '/join-our-team.html' %>
                  <li><a href="javascript:void();" class="nav-link" data-toggle="modal" data-target="#contact_modal">CONTACT</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="email-message hidden alert alert-success alert-dismissible fade in" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button> Thanks for contacting us! We will get back to you as soon as possible!</div>
      </nav>
    </header>

    <div id="body">
      <% if current_page.data.featured_image %>
        <div id="featured_image">
          <%= image_tag current_page.data.featured_image %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <%= partial 'layouts/footer' %>
    <%= partial 'contact_modal' %>
  </body>
</html>
